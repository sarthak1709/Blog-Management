<%- include('../partials/header') -%>

<div class="container">
	<div class="box">
	<h1><%= results.username %> - Profile Page</h1>

	<h2>Blog posts:</h2>
	<% results.blogs.forEach((blog) => {%>
		<div data-aos="fade" class="container card blog-card">
			<div class="box">
				<img src= "<%= blog.image %>" >
			</div>
			<p><strong><%= blog.title %>:</strong></p>
			<p><%= blog.body.substring(0, 200) %></p>
			<p>
				Posted <%= helpers.timeSince(blog.created) %> ago
			</p>
			<a class="button" href="/blogs/<%=blog._id%>"><i class="fas fa-caret-right fa-sm"></i> Read More</a>
		</div>
	<% }); %>
	</div>
</div>
<%- include('../partials/footer') -%>
