<%- include('../partials/header') -%>

<div class="container form-input">
	<h1 class="form-input-title">Edit Comment</h1>
	<form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<label for="body">Text:</label>
		<textarea id="body" name="comment[text]"><%= comment.text %></textarea>
		<input class="button" type="submit">
		<p><a href="/blogs/<%= blog_id %>">Go Back</a></p>
	</form>

</div>

